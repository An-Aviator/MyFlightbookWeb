<div class="noprint" style="width: 100%">
    <div id="headerBar" style="width: 100%">
        <div id="headerLogo">
            <a href='@VirtualPathUtility.ToAbsolute("~/Default.aspx")'>
                <img src="@VirtualPathUtility.ToAbsolute(Branding.CurrentBrand.LogoHRef)" />
            </a>
        </div>
        <div id="headerProfile">
            <div id="headerSearchAndSign">
                <div id="headerSearchBox">
                    <div style="padding-top:3px;">
                        <div class="searchBox" id="searchBox">
                            @using (Html.BeginForm("Search", "MFBTemplate", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken();
                                <img src=@VirtualPathUtility.ToAbsolute("~/images/Search.png") class="searchBoxIcon" alt="" tooltip="" />
                                <input type="text" class="searchBoxTextBox noselect" name="searchText" placeholder="@Resources.LocalizedText.SearchBoxWatermark" />
                                <input type="submit" value="submit" id="_searchBtn" style="display:none;" />
                            }
                            <script type="text/javascript">
                                $(function () {
                                    $('searchBox').keydown(function (e) {
                                        if (e.keyCode == 13) {
                                            $("_searchBtn").focus().click();
                                            return false;
                                        }
                                    });
                                });
                            </script>
                        </div>
                    </div>
                </div>
                <div id="headerLoginStatus">
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <img runat="server" id="imgHdSht" class="headerHeadSht" src="@ViewBag.HeadShot" />
                            <div class="popMenuContent popMenuHidden" id="loginPop">
                                <div style="padding:4px; text-align:center;">
                                    <div>@ViewBag.MemberDate</div>
                                    <div>@ViewBag.LastLogin</div>
                                    <div>@ViewBag.LastActivity</div>
                                    <script type="text/javascript">
                                        function signOut() {
                                            document.getElementById("signOut").click();
                                        }
                                    </script>
                                    @using (Html.BeginForm("SignOut", "MFBTemplate", FormMethod.Post))
                                    {
                                        @Html.AntiForgeryToken();
                                        <div id="signOutRow"><a href="javascript:signOut();">@Resources.LocalizedText.LoginStatusSignOut</a></div>
                                        <input type="submit" style="display:none;" id="signOut" />
                                    }
                                </div>
                            </div>
                        }
                    }
                    <div id="headerWelcome">
                        @{
                            if (User.Identity.IsAuthenticated)
                            {
                                <div style="padding: 2px; margin-top: 2px; width: 180px"><span style="vertical-align:middle">@ViewBag.Greeting</span></div>
                                <div style="padding:2px; font-weight: bold;"><a href="@VirtualPathUtility.ToAbsolute("~/Member/EditProfile.aspx/pftDonate")">@Branding.ReBrand(Resources.LocalizedText.DonateSolicitation)</a></div>
                            }
                            else
                            {
                                <div>
                                    <a href="@VirtualPathUtility.ToAbsolute("~/secure/login.aspx")">@Resources.LocalizedText.LoginStatusSignIn</a> |
                                    <a href="@VirtualPathUtility.ToAbsolute("~/Logon/newuser.aspx")">@Resources.LocalizedText.LoginStatusCreateAccount</a>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div id="headerMiddleContainer">
            @{
                if (String.IsNullOrEmpty(ViewBag.WebinarText))
                {
                    <div id="headerMobileCrossSell">
                        <img src='@VirtualPathUtility.ToAbsolute("~/images/Smartphone.png")' style="vertical-align:middle" />
                        @{
                            if (Request != null && Request.UserAgent != null)
                            {
                                string s = Request.UserAgent.ToUpperInvariant();

                                if (s.Contains("IPAD") || s.Contains("IPHONE"))
                                {
                                    <a href='@VirtualPathUtility.ToAbsolute("~/Public/MobileApps.aspx?p=0")'>@Branding.ReBrand(Resources.LocalizedText.HeaderDownloadIOS)</a>
                                }
                                else if (s.Contains("DROID"))
                                {
                                    <a href='@VirtualPathUtility.ToAbsolute("~/Public/MobileApps.aspx?p=2")'>@Branding.ReBrand(Resources.LocalizedText.HeaderDownloadAndroid)</a>
                                }
                                else
                                {
                                    <a href='@VirtualPathUtility.ToAbsolute("~/Public/MobileApps.aspx")'>@Branding.ReBrand(Resources.LocalizedText.HeaderDownload)</a>
                                    @Html.Raw(Resources.LocalizedText.HeaderDownloadIsFree)
                                }
                            }
                        }
                    </div>
                }
                else
                {
                    <style>
                        .pop-Overlay {
                            display: none;
                        }

                        .pop-Content {
                            display: none;
                        }

                        .pop-Overlay.active {
                            display: block;
                        }

                        .pop-Content.active {
                            display: block;
                        }
                    </style>
                    <div style="height: 32px; text-align:center; padding: 5px; margin-top: 4px; margin-bottom: 4px; background-color:#E8E8E8; border-radius: 5px;">
                        <span class="displayPop" style="vertical-align:middle">@Html.Raw(ViewBag.WebinarText)</span>
                    </div>
                    <div class="pop-Overlay">
                        <div class="modalpopup pop-Content" style="max-width: 480px; white-space:pre-wrap; margin-left: auto; margin-right: auto; position: absolute; top: 30px; z-index: 5;">
                            <div style="text-align:left">@Html.Raw(ViewBag.WebinarDetails);</div>
                            <div style="text-align:center"><button class="closePop" />Close</div>
                        </div>
                    </div>

                    <script type="text/javascript">
                        //appends an "active" class to .popup and .popup-content when the "Open" button is clicked
                        $(".displayPop").on("click", function () {
                            $(".pop-Overlay, .pop-Content").addClass("active");
                        });

                        //removes the "active" class to .popup and .popup-content when the "Close" button is clicked
                        $(".closePop, .pop-Content").on("click", function () {
                            $(".pop-Overlay, .pop-Content").removeClass("active");
                        });
                    </script>
                }
            }
            <div id="headerMenuContainer">
                <ul id="menu-bar">
                    @Html.Raw(ViewBag.TabHTML)
                </ul>
            </div>
        </div>
    </div>
</div>
